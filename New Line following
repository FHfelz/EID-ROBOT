#include <rcc.h>

int sensor1 = 0;

int sensor2 = 0;

int sensor3 = 0;

int sensor4 = 0;

int sensor5 = 0;
 
void setup() {

  Serial.begin(9600);

  pinMode(A1, INPUT);

  pinMode(A2, INPUT);

  pinMode(A4, INPUT);

  pinMode(A5, INPUT);

  pinMode(A0, INPUT);

  motorSetup();

}

void update_sensors()

{

  sensor1 = digitalRead(A5);

  sensor2 = digitalRead(A4);

  sensor3 = digitalRead(A2);

  sensor4 = digitalRead(A1);

  sensor5 = digitalRead(A0);

}

void moveForward()

{

rawMotorCtrl(100,100);

}

void turnRight()

{

  rawMotorCtrl(50, 125);

}

void turnLeft()

{

  rawMotorCtrl(125, 50);

}

void turnBrakesOn()

{

  rawMotorCtrl(0, 0);

}


void loop() {

  //Detect what the sensors are picking up

  Serial.print("Sensor1:");

  Serial.print(sensor1);

  Serial.print(" /Sensor2:");

  Serial.print(sensor2);

  Serial.print(" /Sensor3:");

  Serial.print(sensor3);

  Serial.print(" /Sensor4:");

  Serial.print(sensor4);

  Serial.print(" /Sensor5:");

  Serial.print(sensor5);

  Serial.println();

  // Get state of iR sensors

  update_sensors();


  // Decision Block

  if(sensor1 == sensor2 && sensor3 == sensor4 && sensor1 == sensor4 && sensor1 == sensor5 && sensor5 == 1)

  {

    //When all sensors are reading a black line, they should stop

    while(true){ turnBrakesOn(); }

  }

  else if(sensor2 == 1 || sensor3 == 1){

        moveForward();

      }

  else if(sensor1 == 1){

        turnLeft();

      }

  else if(sensor4 == 1){

        turnRight();

      }

}
 
